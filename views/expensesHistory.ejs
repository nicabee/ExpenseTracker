    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/home">Expense Tracker</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/home">Home
            </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/editProfile?username=<%=username %>">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/expensesHistory/<%= expenses[0].uuid %>/<%= username %>">Expenses History</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-login100" style="background-image: url('images/flower.png');">
        <div class="wrap-login200">
            <div class="container">
            <% for(i=0;i < expenses.length ; i++) { %>
                <table class="table table-striped table-dark">
                  <thead>
                    <tr>
                      <th scope="col">Expense Number</th>
                      <th scope="col">Expense Name</th>
                      <th scope="col">Expense Amount</th>
                      <th scope="col">Expense Category</th>
                      <th scope="col">Expense Date</th>
                      <th scope="col">Expense Note</th>
                      <th scope="col">Active Expense</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <th scope="row"><%= i+1 %></th>
                      <td><%= expenses[i].expense_name %></td>
                      <td>â‚± <%= expenses[i].expense_amount %></td>
                      <td><%= expenses[i].expense_category %></td>
                      <td><%= expenses[i].expense_date %></td>
                      <td><%= expenses[i].expense_note %></td>
                      <td> <%if(expenses[i].deletedAt == null){%>
                        <p style="color:green">Yes</p>
                        <% } else{ %>
                            <p style="color:red">No</p>
                        <% } %>
                    <td>
                    </tr>
                  </tbody>
                </table>
                <% } %>
            </div>
        </div>
