<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Expenses Tracker Trial</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
    <div class="container-login100" style="background-image: url('images/flower.png');">
        <div class="wrap-login200">
            <center><button type="button" class="btn btn-secondary" style="float:right; margin-right: 20px; margin-top: -30px;"><a href="/resetPassword?username=<%= username %>">Reset Password</a></button></center>
            <form action="/resetPassword/<%= username %>" method="POST">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-12 col-md-8 col-lg-8 col-xl-6">
                            <div class="row">
                                <span class="login100-form-title p-b-37" style="margin-top:50px;">
                        RESET PASSWORD
                       </span>
                            </div>
                            <% if( typeof(errors) != 'undefined') { %>
                                <center>
                                    <h5 style="color:red">
                                        <div class="alert alert-danger">
                                            <%= errors %>
                                        </div>
                                    </h5>
                                </center>
                                <% }%>
                                    <div class="form-group">
                                        <label for="password" class="login100-form-header">Old Password: </label>
                                        <div class="wrap-input100 m-b-25">
                                            <input type="password" name="oldpassword" class="form-control" id="oldpassword" placeholder="Enter Old Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                                                required>
                                        </div>
                                        <label for="password" class="login100-form-header">New Password: </label>
                                        <div class="wrap-input100 m-b-25">
                                            <input type="password" name="newpassword" class="form-control" id="newpassword" placeholder="Enter New Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                                                required>
                                        </div>
                                        <label for="password" class="login100-form-header">Confirm New Password: </label>
                                        <div class="wrap-input100 m-b-25">
                                            <input type="password" name="confirmnewpassword" class="form-control" id="confirmnewpassword" placeholder="Confirm New Password" onChange="checkPasswordMatch();" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                                                required>
                                        </div>

                                        <div class="registrationFormAlert" id="divCheckPasswordMatch">
                                        </div>
                                        <div class="row justify-content-start mt-4">
                                            <div class="col ">
                                                <center><input type="submit" class="login100-form-btn" onclick="return Validate()"></center>
                                            </div>
                                        </div>
                                        <br>
                                        <div class="container-login100-form-btn">
                                            <a href="/home" class="loginnow100-form-btn">
                                      Back
                                  </a>
                                        </div>
                                        <br>

                                    </div>
                                    <br>
                        </div>
            </form>
            </div>
</body>

</html>