<body>
<section id="services" class="services section-bg">
    <div class="container">
      <div class="jumbotron jumbotron-fluid">
        <div class="container">
          <h1 class="display-4">Expenses Tracker</h1>
          <h3 style="margin-top:50px;">Welcome <%= data.username %>!</h3>
          <h3 style="margin-top:50px;">UUID: <%= data.uuid %>!</h3>
          <div class="row">
            <center>
              <button type="button" class="btn btn-primary" ><a href="/add" style="color:white !important;">Add Task</a></button>
            </center> <br><br>
            <form action="/sortByCategory" method="POST" id="sortByCategory">
              <div class="form-group">
                <label for="exampleFormControlSelect1">Expense Category</label>
                <select class="form-control" id="exampleFormControlSelect1" name="expense_category">
                  <option value=<%= data.uuid %> >Choose Here</option>
                  <option>Food and Beverage</option>
                  <option>Education</option>
                  <option>Home</option>
                  <option>Transportation</option>
                  <option>Miscellaneous</option>
                </select>
              </div>
              <button type="submit" class="btn btn-primary" >View</button>
              
              </form>

            <% for(i=0;i < expenses.length ; i++) { %>
              <table class="table table-striped table-dark">
                <thead>
                  <tr>
                    <th scope="col">Expense Number</th>
                    <th scope="col">Expense Name</th>
                    <th scope="col">Expense Amount</th>
                    <th scope="col">Expense Category</th>
                    <th scope="col">Expense Note</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th scope="row"><%= i+1 %></th>
                    <td><%= expenses[i].expense_name %></td>
                    <td><%= expenses[i].expense_amount %></td>
                    <td><%= expenses[i].expense_category %></td>
                    <td><%= expenses[i].expense_note %></td>
                    <td>
                    <button type="button" class="btn btn-success"><a href="/update?id=<%= expenses[i].id %>&user=<%= data.uuid %>" style="color:white;">Edit</button>
                    </td>
                    <td>
                   <button type="button" class="btn btn-danger"><a href="/delete?id=<%= expenses[i].id %>&user=<%= data.uuid %>" style="color: white;">Delete</button> 
                        </a>
                    </td>
                  </tr>
                </tbody>
              </table>
            <% } %>
          </div>
        </div>
      </div>
  </div>
</section>
